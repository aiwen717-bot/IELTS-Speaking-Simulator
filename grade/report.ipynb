    "# 从txt文件加载数据\n",
    "def load_ielts_data_from_files(\n",
    "    part1_question_file,\n",
    "    part1_answer_file,\n",
    "    part2_question_file,\n",
    "    part2_answer_file,\n",
    "    part3_question_file,\n",
    "    part3_answer_file\n",
    "):\n",
    "\n",
    "    def read_txt_file(filepath):\n",
    "        \"\"\"读取txt文件并返回内容\"\"\"\n",
    "        with open(filepath, 'r', encoding='utf-8') as f:\n",
    "            return f.read().strip()\n",
    "\n",
    "    # 加载Part1数据\n",
    "    part1_data = {\n",
    "        \"question\": read_txt_file(part1_question_file),\n",
    "        \"answer\": read_txt_file(part1_answer_file)\n",
    "    }\n",
    "\n",
    "    # 加载Part2数据\n",
    "    part2_data = {\n",
    "        \"question\": read_txt_file(part2_question_file),\n",
    "        \"answer\": read_txt_file(part2_answer_file)\n",
    "    }\n",
    "\n",
    "    # 加载Part3数据\n",
    "    part3_data = {\n",
    "        \"question\": read_txt_file(part3_question_file),\n",
    "        \"answer\": read_txt_file(part3_answer_file)\n",
    "    }\n",
    "\n",
    "    return {\n",
    "        \"part1_data\": part1_data,\n",
    "        \"part2_data\": part2_data,\n",
    "        \"part3_data\": part3_data\n",
    "    }\n",
    "\n",
    "\n",
    "# 使用示例\n",
    "if __name__ == \"__main__\":\n",
    "    API_KEY = \"you_api_key"\n",
    "    API_BASE_URL = \"https://api.deepseek.com\"  # 对于OpenAI API\n",
    "\n",
    "    # 初始化评分器\n",
    "    evaluator = IeltsSpeakingEvaluator(\n",
    "        api_key=API_KEY,\n",
    "        api_base_url=API_BASE_URL,\n",
    "        model_name=\"deepseek-chat\"\n",
    "    )\n",
    "\n",
    "    # 从文件加载数据,修改为实际文件路径\n",
    "    data = load_ielts_data_from_files(\n",
    "        part1_question_file=\"ielts_data/Part1_q\",  \n",
    "        part1_answer_file=\"ielts_data/Part1_a\",      \n",
    "        part2_question_file=\"../web_output/part2_question.txt\",  \n",
    "        part2_answer_file=\"../web_output/part2_answer_transcript.txt\",      \n",
    "        part3_question_file=\"../web_output/part3_questions.txt\", \n",
    "        part3_answer_file=\"../web_output/part3_answers.txt\"       \n",
    "    )\n",
    "\n",
    "    part1_data = data[\"part1_data\"]\n",
    "    part2_data = data[\"part2_data\"]\n",
    "    part3_data = data[\"part3_data\"]\n",
    "\n",
    "    # 老师对发音的评价（也可以改为从文件读取）\n",
    "    pronunciation_feedback = \"../web_output/pronunciation_score.json\"\n",
    "\n",
    "    report = evaluator.generate_report(\n",
    "        part1=part1_data,\n",
    "        part2=part2_data,\n",
    "        part3=part3_data,\n",
    "        pronunciation_feedback=pronunciation_feedback\n",
    "    )\n",
    "    \n",
    "    if report:\n",
    "        print(\"雅思口语评分报告:\")\n",
    "        print(\"=\" * 50)\n",
    "        print(report)\n",
    "        print(\"=\" * 50)\n",
    "        \n",
    "        # 将报告保存到web_output目录\n",
    "        with open(\"../web_output/ielts_speaking_report.txt\", \"w\", encoding=\"utf-8\") as f:\n",
    "            f.write(report)\n",
    "        print(\"报告已保存到 ../web_output/ielts_speaking_report.txt\")\n",
    "    else:\n",
    "        print(\"无法生成评分报告，请检查API配置和网络连接\")"
   ]
  }
